<com.ivygames.morskoiboi.ui.view.GameplayLayout2 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameplay_layout"
    android:background="@color/default_background"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/bw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.ivygames.morskoiboi.ui.view.FleetBoardView
        android:id="@+id/board_view_fleet"
        android:layout_height="match_parent"
        android:padding="@dimen/board_padding" />

    <com.ivygames.morskoiboi.ui.view.DigitalTimerView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="4dp" />

    <include
        android:id="@+id/status_container"
        layout="@layout/status" />

    <ImageView
        android:id="@+id/chat_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/chat" />

    <include layout="@layout/enemy_board" />

</com.ivygames.morskoiboi.ui.view.GameplayLayout2>
