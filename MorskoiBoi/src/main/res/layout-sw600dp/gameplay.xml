<com.ivygames.morskoiboi.ui.view.GameplayLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:padding="@dimen/tablet_gameplay_padding"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/bw"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/tablet_gameplay_padding"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- status -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="@dimen/gameplay_status_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/status_vertical_margin">

                <TextView
                    android:id="@+id/player"
                    style="@style/StatusText"
                    android:layout_width="0dp"
                    android:layout_marginRight="@dimen/gameplay_name_padding"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Sagi Mizrachi" />

                <TextView
                    android:id="@+id/enemy"
                    style="@style/StatusText"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/gameplay_name_padding"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Android" />
            </LinearLayout>

            <com.ivygames.morskoiboi.ui.view.FleetView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:verticalMargin="@dimen/status_vertical_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <com.ivygames.morskoiboi.ui.view.FleetBoardView
                android:id="@+id/board_view_fleet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/board_border" />

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/chat_button"
                    style="@style/ChatButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/chat" />

                <ImageButton
                    android:id="@+id/sound_btn"
                    style="@style/SettingsButton"
                    android:layout_gravity="center_horizontal" />

                <ImageButton
                    android:id="@+id/vibration_btn"
                    style="@style/SettingsButton"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.ivygames.morskoiboi.ui.view.TimerView
        android:id="@+id/timer"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_margin="4dp" />

    <include
        layout="@layout/enemy_board"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp" />

</com.ivygames.morskoiboi.ui.view.GameplayLayout>