            style="@style/WinShip"
            android:layout_weight="1"
            android:src="@drawable/gunboat_empty" />

        <View
            android:layout_width="@dimen/gap_between_ships"
            android:layout_height="@dimen/gap_between_ships" />

        <ImageView
            android:id="@+id/ship1_3"
            style="@style/WinShip"
            android:layout_weight="1"
            android:src="@drawable/gunboat_empty" />

        <View
            android:layout_width="@dimen/gap_between_ships"
            android:layout_height="@dimen/gap_between_ships" />

        <ImageView
            android:id="@+id/ship1_4"
            style="@style/WinShip"
            android:layout_weight="1"
            android:src="@drawable/gunboat_empty" />
    </LinearLayout>

</merge>
