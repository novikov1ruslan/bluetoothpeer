<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/ship4"
            style="@style/WinShip"
            android:layout_weight="4"
            android:src="@drawable/aircraft_carrier_empty" />

        <View
            android:layout_width="@dimen/gap_between_ships"
            android:layout_height="@dimen/gap_between_ships" />

        <ImageView
            android:id="@+id/ship3_1"
            style="@style/WinShip"
            android:layout_weight="3"
            android:src="@drawable/battleship_empty" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:paddingLeft="@dimen/gap_between_ships"
        android:paddingRight="@dimen/gap_between_ships">

        <ImageView
            android:id="@+id/ship3_2"
            style="@style/WinShip"
            android:layout_weight="3"
            android:src="@drawable/battleship_empty" />

        <View
            android:layout_width="@dimen/gap_between_ships"
            android:layout_height="@dimen/gap_between_ships" />

        <ImageView
            android:id="@+id/ship2_1"
            style="@style/WinShip"
            android:layout_weight="2"
            android:src="@drawable/frigate_empty" />

        <View
            android:layout_width="@dimen/gap_between_ships"
