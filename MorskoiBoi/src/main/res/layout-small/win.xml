<com.ivygames.morskoiboi.ui.view.WinLayoutSmall xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/win_top_margin"
        android:text="@string/you_win"
        android:textColor="@color/victory_text"
        android:textSize="@dimen/victory_text" />

    <ImageView
        android:layout_width="match_parent"
        android:scaleType="center"
        android:src="@drawable/carrier_big" />

    <View
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/time"
        android:layout_gravity="left"
        android:drawableLeft="@drawable/stopwatch"
        android:paddingLeft="16dp"
        android:text="2:51"
        android:textColor="@color/main"
        android:textSize="@dimen/win_normal_text" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/sign_in_bar"
        style="@style/SignInBar"
        android:layout_width="match_parent" >

        <com.google.android.gms.common.SignInButton android:id="@+id/sign_in_button" />

        <TextView
            style="@style/SinInText"
            android:layout_width="0dp"
            android:layout_margin="@dimen/sign_in_text_margin"
            android:layout_weight="1"
            android:text="@string/sign_in_to_share" />
    </LinearLayout>

    <View
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="8dp"
        android:background="@color/main" />

    <RelativeLayout
        android:id="@+id/scores_container"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <TextView
            style="@style/NormalText"
            android:text="@string/total_scores" />

        <TextView
            android:id="@+id/total_scores"
            style="@style/NormalText"
            android:layout_alignParentRight="true"
            android:text="34543"
            android:textColor="@color/victory_text" />
    </RelativeLayout>

    <View
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include
        android:id="@+id/continue_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/continue_panel"
        android:visibility="visible" />

    <include
        android:id="@+id/surrender_continue_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/surrendered_continue_panel"
        android:visibility="gone" />

</com.ivygames.morskoiboi.ui.view.WinLayoutSmall>