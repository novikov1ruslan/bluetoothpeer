<?xml version="1.0" encoding="utf-8"?>
<com.ivygames.morskoiboi.ui.view.DeviceListLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/battleship_margin_horizontal"
    android:paddingRight="@dimen/battleship_margin_horizontal">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:background="@color/main"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/select_device"
        android:textColor="@color/dark_button_text_normal"
        android:textSize="@dimen/button_main_textSize" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/discovery_animation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/spinner_76_inner_holo"
        android:visibility="gone" />

    <LinearLayout android:layout_width="match_parent">

        <Button
            android:id="@+id/discover_btn"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/discover" />

    </LinearLayout>

</com.ivygames.morskoiboi.ui.view.DeviceListLayout>