<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:ignore="SpUsage">

    <style name="Button.Menu">
        <item name="android:textSize">@dimen/button_main_textSize</item>
        <item name="android:layout_height">@dimen/menu_button_layout_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/main_buttons_margin</item>
        <item name="android:layout_marginLeft">@dimen/main_buttons_margin</item>
        <item name="android:layout_marginRight">@dimen/main_buttons_margin</item>
    </style>

    <style name="ChatButton">
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:background">@drawable/chat_background</item>
    </style>

    <style name="Edit" parent="@style/EditTextAppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:textSize">@dimen/player_name_textSize</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Status">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="List" parent="@android:Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/list_divider</item>
        <item name="android:dividerHeight">@dimen/list_divider_height</item>
        <item name="android:footerDividersEnabled">true</item>
    </style>

    <style name="HighScoreItem">
        <item name="android:layout_height">@dimen/high_score_item_height</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SignInBar">
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="SettingsButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">@dimen/settings_circle_size</item>
        <item name="android:layout_height">@dimen/settings_circle_size</item>
        <item name="android:background">@drawable/btn_circle_background</item>
    </style>

    <style name="SettingsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/main_buttons_margin</item>
        <item name="android:paddingLeft">@dimen/settings_padding</item>
        <item name="android:paddingRight">@dimen/settings_padding</item>
    </style>

    <style name="WinShip">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/win_ship_height</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="BigCircle">
        <item name="android:layout_width">@dimen/big_circle_size</item>
        <item name="android:layout_height">@dimen/big_circle_size</item>
        <item name="android:background">@drawable/btn_circle_background</item>
    </style>

    <style name="SmallCircle">
        <item name="android:layout_width">@dimen/small_circle_size</item>
        <item name="android:layout_height">@dimen/small_circle_size</item>
        <item name="android:background">@drawable/btn_circle_background</item>
    </style>

    <style name="SignInFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/sign_in_size</item>
        <item name="android:layout_marginBottom">@dimen/main_buttons_margin</item>
        <item name="android:layout_marginLeft">@dimen/main_buttons_margin</item>
        <item name="android:layout_marginRight">@dimen/main_buttons_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EnemyChatEntry" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/enemy_chat</item>
    </style>

    <style name="MyChatEntry" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/my_chat_text</item>
    </style>

    <style name="TutorialButton">
        <item name="android:background">@drawable/got_it_button</item>
        <item name="android:textColor">@color/tutorial_text</item>
    </style>

    <style name="HelpButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/help_background</item>
        <item name="android:clickable">true</item>
    </style>

</resources>