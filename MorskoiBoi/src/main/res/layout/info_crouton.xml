<?xml version="1.0" encoding="utf-8"?>
<com.ivygames.morskoiboi.ui.view.InfoCroutonLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/info_crouton_background"
    android:padding="2dp"
    tools:ignore="HardcodedText">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/info_frame"
        android:gravity="center">

        <TextView
            android:id="@+id/info_message"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="12dp"
            android:text="info text"
            android:textColor="@color/main"
            android:textSize="@dimen/crouton_textSize" />
    </FrameLayout>

</com.ivygames.morskoiboi.ui.view.InfoCroutonLayout>