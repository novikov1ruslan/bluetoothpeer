        <ImageView
            android:id="@+id/ship2_2"
            style="@style/WinShip"
            android:layout_weight="2"
            android:src="@drawable/frigate_empty" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:paddingLeft="@dimen/gap_between_ships"
        android:paddingRight="@dimen/gap_between_ships">

        <ImageView
            android:id="@+id/ship2_3"
            style="@style/WinShip"
            android:layout_weight="2"
            android:src="@drawable/frigate_empty" />

        <View
            android:layout_width="@dimen/gap_between_ships"
            android:layout_height="@dimen/gap_between_ships" />

        <ImageView
            android:id="@+id/ship1_1"
            style="@style/WinShip"
            android:layout_weight="1"
            android:src="@drawable/gunboat_empty" />

        <View
            android:layout_width="@dimen/gap_between_ships"
            android:layout_height="@dimen/gap_between_ships" />

        <ImageView
