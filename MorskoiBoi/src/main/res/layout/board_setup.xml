<com.ivygames.morskoiboi.screen.boardsetup.BoardSetupLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/default_background"
    android:orientation="vertical">

    <com.ivygames.morskoiboi.screen.boardsetup.SetupBoardView
        android:id="@+id/board_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_panel"
        android:padding="@dimen/board_setup_margin" />

    <ImageButton
        android:id="@+id/help_button"
        style="@style/HelpButton"
        android:layout_width="@dimen/help_button_size"
        android:layout_height="@dimen/help_button_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:src="@drawable/action_help" />

    <LinearLayout
        android:id="@+id/buttons_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/auto_setup"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/auto" />

        <Button
            android:id="@+id/done"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/done" />
    </LinearLayout>

</com.ivygames.morskoiboi.screen.boardsetup.BoardSetupLayout>