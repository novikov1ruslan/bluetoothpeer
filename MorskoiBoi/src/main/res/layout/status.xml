<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/status_container"
    android:orientation="vertical"
    android:padding="@dimen/gameplay_status_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/status_vertical_margin">

        <TextView
            android:id="@+id/player"
            style="@style/StatusText"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/gameplay_name_padding"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Sagi Mizrachi" />

        <TextView
            android:id="@+id/enemy"
            style="@style/StatusText"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/gameplay_name_padding"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Android" />
    </LinearLayout>

    <com.ivygames.morskoiboi.ui.view.FleetView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:verticalMargin="@dimen/status_vertical_margin" />
</LinearLayout>
