<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:ignore="SpUsage">

    <style name="PlayerNameText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/player_name_textSize</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="HeaderText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">26dp</item>
        <item name="android:textColor">@color/main</item>
    </style>

    <style name="SettingsHeaderText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/settings_header_textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main</item>
    </style>

    <style name="NormalText" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/edit_text</item>
    </style>

    <style name="ContinueText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/player_name_textSize</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScoresText" parent="@android:style/Widget.TextView">
        <item name="android:textSize"> @dimen/scores_textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/victory_text</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="HelpText" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/edit_text</item>
    </style>

    <style name="StatusText" parent="@android:style/Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/status_text</item>
        <item name="android:textSize">@dimen/status_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SinInText" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/main</item>
    </style>

    <style name="SettingsText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/settings_textSize</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

</resources>